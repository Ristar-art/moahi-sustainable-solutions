---
// src/components/ServiceCard.astro
export interface Props {
    title: string;
    features: string[];
    link?: string;
    className?: string;
}

const { title, features, link, className = '' } = Astro.props;
---

<div class={`service-card ${className}`}>
    <h3>{title}</h3>
    <ul>
        {features.map((feature) => (
            <li>{feature}</li>
        ))}
    </ul>
    {link && (
        <a href={link} class="btn btn-primary">Learn More</a>
    )}
</div>

<style>
    .service-card {
        background: white;
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
        border-left: 4px solid var(--ochre);
        position: relative;
    }

    .service-card:hover {
        transform: translateY(-5px);
    }

    .service-card h3 {
        color: var(--deep-red);
        margin-bottom: 1rem;
    }

    .service-card ul {
        list-style: none;
        padding-left: 0;
        margin-bottom: 1.5rem;
    }

    .service-card li {
        padding: 0.5rem 0;
        border-bottom: 1px solid #f0f0f0;
        color: var(--text-light);
    }

    .service-card li:before {
        content: "âœ“";
        color: var(--sage-green);
        font-weight: bold;
        margin-right: 0.5rem;
    }

    .service-card li:last-child {
        border-bottom: none;
    }
</style>