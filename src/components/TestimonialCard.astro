---
// src/components/TestimonialCard.astro
export interface Props {
    content: string;
    author: string;
    role: string;
    company: string;
    image: string;
    className?: string;
}

const { content, author, role, company, image, className = '' } = Astro.props;
---

<div class={`testimonial ${className}`}>
    <div class="testimonial-content">
        {content}
    </div>
    <div class="testimonial-author">
        <img src={image} alt={author} loading="lazy">
        <div class="author-info">
            <h5>{author}</h5>
            <p>{role}, {company}</p>
        </div>
    </div>
</div>

<style>
    .testimonial {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        position: relative;
        transition: transform 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .testimonial:hover {
        transform: translateY(-5px);
    }

    .testimonial::before {
        content: '"';
        font-size: 4rem;
        color: var(--ochre);
        position: absolute;
        top: -10px;
        left: 20px;
        line-height: 1;
        font-family: serif;
    }

    .testimonial-content {
        margin-top: 1rem;
        font-style: italic;
        color: var(--text-light);
        flex-grow: 1;
        line-height: 1.6;
        font-size: 1rem;
    }

    .testimonial-author {
        margin-top: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .testimonial-author img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid var(--ochre);
        flex-shrink: 0;
    }

    .author-info h5 {
        color: var(--deep-red);
        margin-bottom: 0.2rem;
        font-size: 1rem;
        font-weight: 600;
    }

    .author-info p {
        color: var(--text-light);
        font-size: 0.9rem;
        margin: 0;
        line-height: 1.3;
    }

    @media (max-width: 768px) {
        .testimonial {
            padding: 1.5rem;
        }
        
        .testimonial::before {
            font-size: 3rem;
            top: -5px;
            left: 15px;
        }
        
        .testimonial-author {
            flex-direction: column;
            text-align: center;
            gap: 0.5rem;
        }
        
        .testimonial-author img {
            width: 60px;
            height: 60px;
        }
    }
</style>