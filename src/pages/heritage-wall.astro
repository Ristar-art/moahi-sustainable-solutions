---
// src/pages/heritage-wall.astro
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Heritage Wall - Moahi Sustainable Solutions";
const pageDescription = "Voices of African Sustainability - Share your thoughts on African heritage and sustainability. A digital collage of wisdom, innovation, and inspiration from across the continent.";

const ubuntuPrinciples = [
    { title: "Interconnectedness", description: "Recognizing that all life is connected - what affects one, affects all. This principle guides holistic approaches to sustainability." },
    { title: "Community First", description: "Prioritizing collective well-being over individual gain. Sustainable solutions must benefit the entire community." },
    { title: "Shared Responsibility", description: "Everyone has a role in caring for our common future. Sustainability is a collective responsibility." },
    { title: "Wisdom of Elders", description: "Traditional knowledge and practices offer proven solutions for living in harmony with nature." }
];

const featuredVoices = [
    { quote: "African sustainability innovation happens when we combine ancestral wisdom with cutting-edge technology...", author: "Dr. Nomsa Mbeki", role: "Environmental Scientist & Community Leader", location: "Limpopo, South Africa", image: "https://picsum.photos/50/50?random=30" },
    { quote: "In our language, we don't have a word for 'sustainability' because it was simply how we lived...", author: "Chief Amara Okafor", role: "Traditional Leader & Sustainability Advocate", location: "Lagos, Nigeria", image: "https://picsum.photos/50/50?random=31" },
    { quote: "Youth are not just stakeholders in sustainability - we are the architects of Africa's green future...", author: "Thandiwe Dlamini", role: "Climate Activist & Green Tech Entrepreneur", location: "eSwatini", image: "https://picsum.photos/50/50?random=32" }
];

const heritageMessages = [
    { message: "Ubuntu teaches us that sustainability is not just about the environment, but about the interconnectedness of all life...", author: "Nomsa Mbeki", location: "Community Leader, Limpopo" },
    { message: "Our ancestors lived in harmony with nature for thousands of years...", author: "Dr. Kwame Asante", location: "Mining Executive, Ghana" },
    { message: "African solutions for African challenges - that's how we build a sustainable future...", author: "Fatima Al-Rashid", location: "ESG Consultant, Morocco" },
    { message: "The baobab tree stands for thousands of years because its roots run deep and wide...", author: "Joseph Wanjiku", location: "Agricultural Specialist, Kenya" }
];

const stats = [
    { number: "847", label: "Voices Shared" },
    { number: "32", label: "African Countries" },
    { number: "15", label: "Languages Represented" },
    { number: "156", label: "Traditional Wisdom Shared" }
];

const guidelines = [
    "Traditional knowledge that guides sustainable practices",
    "Ubuntu principles applied to modern business",
    "Community-based sustainability solutions",
    "Stories of environmental stewardship from your heritage",
    "Lessons from African elders about living in harmony with nature",
    "Innovative approaches that blend tradition with technology"
];
---

<BaseLayout title={pageTitle} description={pageDescription}>

  <!-- Hero -->
  <section class="bg-gradient-to-br from-green-700 via-green-600 to-green-800 text-white py-24 px-6 md:px-16 text-center rounded-3xl shadow-lg max-w-7xl mx-auto mt-16">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">Heritage Wall: Voices of African Sustainability</h1>
    <p class="text-lg md:text-xl max-w-3xl mx-auto">Share your thoughts on African heritage and sustainability. Build a digital collage of wisdom, innovation, and inspiration from across the continent.</p>
  </section>

  <!-- Ubuntu Philosophy -->
  <section class="py-16 px-6 md:px-12 max-w-7xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-800 text-center mb-6">Ubuntu: The Foundation of African Sustainability</h2>
    <blockquote class="text-green-700 text-xl md:text-2xl italic text-center mb-6">"I am because we are. We are because I am."</blockquote>
    <p class="text-gray-700 text-center mb-12">Ubuntu teaches us that our individual well-being is interconnected with the well-being of our community and environment. This philosophy provides the foundation for modern sustainability practices that honor both people and planet.</p>

    <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {ubuntuPrinciples.map((principle) => (
        <div class="bg-white p-6 rounded-2xl shadow-md hover:shadow-lg transition duration-300 animate-on-scroll">
          <h4 class="text-xl font-semibold text-green-800 mb-2">{principle.title}</h4>
          <p class="text-gray-700">{principle.description}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Featured Voices -->
  <section class="bg-gray-50 py-16 px-6 md:px-12">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-800 text-center mb-4">Featured Voices</h2>
    <p class="text-gray-600 text-center mb-12">Inspiring perspectives from African leaders, innovators, and communities</p>

    <div class="grid sm:grid-cols-1 md:grid-cols-3 gap-8">
      {featuredVoices.map((voice) => (
        <div class="bg-white p-6 rounded-2xl shadow-md hover:shadow-lg transition duration-300 animate-on-scroll">
          <p class="text-gray-800 italic mb-4">"{voice.quote}"</p>
          <div class="flex items-center gap-4 mt-4">
            <img src={voice.image} alt={voice.author} class="w-12 h-12 rounded-full object-cover border-2 border-green-700">
            <div>
              <h5 class="font-semibold text-gray-800">{voice.author}</h5>
              <p class="text-gray-600 text-sm">{voice.role} â€¢ {voice.location}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Heritage Wall Messages -->
  <section class="py-16 px-6 md:px-12 bg-gradient-to-br from-green-800 via-green-700 to-green-600 text-white">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">Community Voices</h2>
    <p class="text-center text-green-100 mb-12">Wisdom and insights shared by our community members across Africa</p>

    <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {heritageMessages.map((msg) => (
        <div class="bg-white text-gray-800 p-6 rounded-2xl shadow-md hover:shadow-lg transition duration-300 animate-on-scroll">
          <p class="italic mb-2">"{msg.message}"</p>
          <small class="text-gray-600">- {msg.author}, {msg.location}</small>
        </div>
      ))}
    </div>

    <div class="bg-white p-8 rounded-3xl shadow-md max-w-4xl mx-auto animate-on-scroll">
      <h3 class="text-2xl font-bold mb-4">Add Your Voice to the Heritage Wall</h3>
      <p class="text-gray-700 mb-4">Share your thoughts on how African heritage, traditional knowledge, or Ubuntu philosophy can guide modern sustainability practices.</p>
      <ul class="list-disc list-inside text-gray-700 mb-6 space-y-1">
        {guidelines.map((guideline) => (
          <li>{guideline}</li>
        ))}
      </ul>

      <form id="heritageForm" class="grid gap-4">
        <input type="text" placeholder="Your Name (Optional)" class="border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-600">
        <input type="text" placeholder="Your Location/Country (Optional)" class="border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-600">
        <input type="text" placeholder="Your Role/Organization (Optional)" class="border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-600">
        <textarea placeholder="Share your wisdom..." required maxlength="500" class="border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-600"></textarea>
        <div class="text-right text-gray-500 text-sm">500 characters remaining</div>
        <button type="submit" class="bg-green-700 hover:bg-green-800 text-white font-bold px-6 py-3 rounded-lg shadow-md transition duration-300">Add to Heritage Wall</button>
      </form>
    </div>
  </section>

  <!-- Stats -->
  <section class="py-16 px-6 md:px-12 max-w-7xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-bold mb-12">Growing Community of Voices</h2>
    <div class="grid sm:grid-cols-2 md:grid-cols-4 gap-8">
      {stats.map((stat) => (
        <div class="bg-green-50 p-6 rounded-2xl shadow-md hover:shadow-lg transition duration-300">
          <h3 class="text-3xl font-bold text-green-700 mb-2">{stat.number}</h3>
          <p class="text-gray-700">{stat.label}</p>
        </div>
      ))}
    </div>
  </section>

</BaseLayout>
