<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Page Hero -->
    <section class="page-hero">
        <div class="container">
            <h1>Our Services</h1>
            <p>Comprehensive ESG and SLP solutions tailored for African contexts and international standards.</p>
        </div>
    </section>

    <div class="container">
        <!-- Our Process -->
        <div class="section-header animate-on-scroll">
            <h2>Our Proven Process</h2>
            <p>Systematic approach ensuring measurable results and sustainable impact</p>
        </div>
        
        <div class="process-steps">
            <div class="process-step animate-on-scroll" data-step="1">
                <h4>Assess & Diagnose</h4>
                <p>Comprehensive baseline assessment of current ESG maturity, stakeholder landscape, and regulatory compliance status.</p>
            </div>
            <div class="process-step animate-on-scroll" data-step="2">
                <h4>Design & Plan</h4>
                <p>Co-create tailored solutions with stakeholders, incorporating Ubuntu principles and international best practices.</p>
            </div>
            <div class="process-step animate-on-scroll" data-step="3">
                <h4>Implement & Execute</h4>
                <p>Systematic implementation with continuous monitoring, stakeholder engagement, and adaptive management.</p>
            </div>
            <div class="process-step animate-on-scroll" data-step="4">
                <h4>Monitor & Sustain</h4>
                <p>Ongoing monitoring, impact measurement, capacity building, and continuous improvement systems.</p>
            </div>
        </div>

        <!-- Service Categories -->
        <div class="service-section" id="esg-compliance">
            <div class="section-header animate-on-scroll">
                <h2>ESG Strategy & Compliance</h2>
                <p>Comprehensive ESG frameworks aligned with international standards and African contexts.</p>
            </div>
            
            <div class="services-grid">
                {esgServices.map((service) => (
