---

<BaseLayout title={pageTitle} description={pageDescription}>

  <!-- Page Hero -->
  <section class="relative bg-gradient-to-br from-green-700 via-green-600 to-green-800 text-white py-28 px-6 md:px-16 text-center rounded-3xl max-w-7xl mx-auto mt-20 shadow-lg">
    <div class="container mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Our Services</h1>
      <p class="text-lg md:text-xl max-w-3xl mx-auto">Comprehensive ESG and SLP solutions tailored for African contexts and international standards.</p>
    </div>
  </section>

  <div class="container mx-auto px-6 md:px-12 mt-20 space-y-24">

    <!-- Our Process -->
    <div class="section-header text-center md:text-left animate-on-scroll mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">Our Proven Process</h2>
      <p class="text-gray-600">Systematic approach ensuring measurable results and sustainable impact</p>
    </div>
    
    <div class="process-steps grid md:grid-cols-4 gap-6 text-center md:text-left">
      {[
        { step: "Assess & Diagnose", desc: "Comprehensive baseline assessment of current ESG maturity, stakeholder landscape, and regulatory compliance status." },
        { step: "Design & Plan", desc: "Co-create tailored solutions with stakeholders, incorporating Ubuntu principles and international best practices." },
        { step: "Implement & Execute", desc: "Systematic implementation with continuous monitoring, stakeholder engagement, and adaptive management." },
        { step: "Monitor & Sustain", desc: "Ongoing monitoring, impact measurement, capacity building, and continuous improvement systems." }
      ].map((p, index) => (
        <div class="process-step bg-white rounded-2xl p-6 shadow-md hover:shadow-lg transition duration-300 animate-on-scroll">
          <div class="step-number w-12 h-12 bg-green-700 text-white font-bold rounded-full flex items-center justify-center mb-4">{index + 1}</div>
          <h4 class="text-xl font-semibold text-gray-800 mb-2">{p.step}</h4>
          <p class="text-gray-700">{p.desc}</p>
        </div>
      ))}
    </div>

    <!-- Service Categories -->
    {[
      { id: "esg-compliance", title: "ESG Strategy & Compliance", desc: "Comprehensive ESG frameworks aligned with international standards and African contexts.", services: esgServices },
      { id: "social-license", title: "Social License to Operate", desc: "Building and maintaining sustainable relationships with communities and stakeholders.", services: socialLicenseServices },
      { id: "advisory", title: "Strategic Advisory Services", desc: "Expert guidance on emerging sustainability challenges and opportunities.", services: advisoryServices },
      { id: "training", title: "Training & Capacity Building", desc: "Empowering teams and communities with knowledge and skills for sustainable impact.", services: trainingServices }
    ].map((category) => (
      <div class="service-section" id={category.id}>
        <div class="section-header text-center md:text-left animate-on-scroll mb-8">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">{category.title}</h2>
          <p class="text-gray-600">{category.desc}</p>
        </div>

        <div class="services-grid grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {category.services.map((service) => (
            <ServiceCard 
              title={service.title}
              features={service.features}
              link={service.link}
              className="animate-on-scroll bg-white rounded-2xl shadow-md hover:shadow-lg transition duration-300 p-6"
            />
          ))}
        </div>
      </div>
    ))}

    <!-- Industry Expertise -->
    <div class="section-header text-center md:text-left animate-on-scroll mb-8">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">Industry Expertise</h2>
      <p class="text-gray-600">Deep sector knowledge across African economic landscapes</p>
    </div>

    <div class="industry-grid grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {industries.map((industry) => (
        <div class="industry-item bg-white rounded-2xl shadow-md p-6 hover:shadow-lg transition duration-300 animate-on-scroll">
          <h5 class="text-lg font-semibold text-green-700 mb-2">{industry.title}</h5>
          <ul class="list-disc list-inside text-gray-700 space-y-1">
            {industry.sectors.map((sector) => (
              <li>{sector}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>

  </div>

  <!-- CTA Section -->
  <section class="cta-section bg-green-700 text-white py-20 mt-20 rounded-3xl max-w-7xl mx-auto text-center shadow-lg px-6 md:px-16">
    <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Transform Your Sustainability Journey?</h2>
    <p class="text-lg md:text-xl mb-8 max-w-3xl mx-auto">Contact our experts for a personalized consultation and roadmap to ESG excellence.</p>
    <div class="cta-buttons flex flex-col sm:flex-row justify-center gap-4">
      <a href="/contact" class="px-6 py-3 bg-white text-green-700 font-semibold rounded-xl hover:bg-green-600 hover:text-white transition duration-300">Schedule Consultation</a>
      <a href="/assessment" class="px-6 py-3 border border-white text-white font-semibold rounded-xl hover:bg-white hover:text-green-700 transition duration-300">Take Assessment</a>
    </div>
  </section>

</BaseLayout>

<script>
  // Smooth scroll for anchor links
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const targetId = this.getAttribute('href').substring(1);
        const targetElement = document.getElementById(targetId);
        if (targetElement) {
          targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  });
</script>
